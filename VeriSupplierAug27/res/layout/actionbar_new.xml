<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/action_bar"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/action_leftmenu_layout"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:background="@raw/menu"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_back_layout"
        android:layout_width="65dp"
        android:layout_height="fill_parent"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:visibility="visible" >
        
        <ImageView
            android:id="@+id/vI_ab_trademenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:background="@raw/menunew"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
         <ImageView
            android:id="@+id/vI_ab_dashboardmenuleft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:background="@raw/menunew"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/vI_ab_backview"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@raw/arrow_back"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/vI_ab_shoppingCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:background="@raw/icon_cart"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vL_title_layout"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/action_titel_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/actionbar_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/action_subtitel_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/actionbar_text"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_rightmunu_layout"
        android:layout_width="65dp"
        android:layout_height="fill_parent"
        android:gravity="end|center"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/vI_PD_qrscan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/qrcode_icon"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/vI_ab_dashboardMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/icon_dashboard"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/vI_ab_dashboardproductMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/icon_cart"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/vI_ab_dashboardshippingMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/service_new"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/vI_ab_dashboardinspectionMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/icon_inspctiongrey"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/vI_ab_dashboardcustomsMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/icon_customsgrey"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/vI_ab_dashboardwarehouseMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@raw/icon_warehousegrey"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <com.mmadapps.verisupplier.customs.CircularImageView
            android:id="@+id/vI_ab_buyerImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>