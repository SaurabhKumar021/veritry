<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollViewact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vT_nw_warehousenameText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="New Channel Name"
                android:textColor="#FE2E2E"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <EditText
                android:id="@+id/vE_add_warehousename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="Channel Name"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="#D8D8D8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <TextView
                android:id="@+id/vT_nw_addressText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Address"
                android:textColor="#FE2E2E"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <EditText
                android:id="@+id/vE_add_street"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="Street"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="#D8D8D8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <EditText
                android:id="@+id/vE_add_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="City"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="#D8D8D8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <EditText
                android:id="@+id/vE_add_country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="Country"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="#D8D8D8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <EditText
                android:id="@+id/vE_add_web"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="Web"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColorHint="#D8D8D8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <TextView
                android:id="@+id/vT_cc_addchannel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Channel Logo"
                android:textColor="#FE2E2E"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6" />

            <ListView
                android:id="@+id/vL_cc_channel_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/vI_nw_checkmark"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:src="@raw/checkmark" />

</LinearLayout>