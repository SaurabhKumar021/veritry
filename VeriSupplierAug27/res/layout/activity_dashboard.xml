<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pattern_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lenear_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:background="@color/new_green"
                android:gravity="center" >

                <TextView
                    android:id="@+id/vT_quotation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/quotation_text"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="5dp"
                android:background="@color/text_color_gray" />

            <RelativeLayout
                android:id="@+id/vL_ad_info_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@raw/grey_layout"
                android:gravity="center" >

                <TextView
                    android:id="@+id/vT_order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@raw/normal_layout"
                    android:text="@string/info_text"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="5dp"
                android:background="@color/text_color_gray" />

            <RelativeLayout
                android:id="@+id/vL_ad_price_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@raw/grey_layout"
                android:gravity="center" >

                <TextView
                    android:id="@+id/vT_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/price_text"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="5dp"
                android:background="@color/text_color_gray" />

            <RelativeLayout
                android:id="@+id/vL_ad_order_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@raw/grey_layout"
                android:gravity="center" >

                <TextView
                    android:id="@+id/vT_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/order"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lenear_view4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lenear_view"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >
        </LinearLayout>
       

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lenear_view4"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/dfa_ViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:id="@+id/imageViewon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@raw/menu_icon" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/green_new"
        android:choiceMode="singleChoice"
        android:divider="@color/border_line"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>