<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lenear_view4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lenear_view"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lenear_view7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#4DC98D"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vT_inbox_view"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@raw/inbox_icon" />

            <TextView
                android:id="@+id/vT_inbox_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:text="Inbox"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:src="@raw/white_circle_notify"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="3" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lenear_view8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/grey_light"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vT_sent_view"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@raw/sent_icon" />

            <TextView
                android:id="@+id/vT_sent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="18dp"
                android:text="Sent"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/quortation_list_viewin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

    <ListView
        android:id="@+id/quortation_list_viewout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>