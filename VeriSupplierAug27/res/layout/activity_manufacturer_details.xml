<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="About Manufacturer"
                android:textColor="@color/new_green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vT_mda_manufacture_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/vT_mda_manufacturer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@raw/dash_lane" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Basic Information"
                android:textColor="@color/new_green"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Business Type:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vT_mda_businesstype"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Manufacturer, Trading Company" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Established Year"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vT_mda_yearestablished"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Wireless video door phone, video door phone, wireless peephole viewer, peephole viewer, doorviewer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Number Of Employees:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vT_mda_noemployee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="51-100 People" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@raw/dash_lane" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Trade And Market"
                android:textColor="@color/new_green"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Markets:"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/vL_PD_manufacturelist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
               
                    android:layout_weight="1"
                    android:divider="@null" >
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@raw/dash_lane" />
    </LinearLayout>

</ScrollView>