<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp" >

                <ImageView
                    android:id="@+id/vI_oa_channelimage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.71"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/vT_oa_channelnanme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/channel_name" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/vT_oa_productnanme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Product name here..."
                        android:textColor="@color/red_textcolor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty : "
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/vT_oa_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textSize="10sp" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order# : "
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/vT_oa_orderNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0011223344"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/vT_oa_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="5dp"
                                android:text="11/11/11"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#007A87"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/vI_oa_productImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.05"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vT_oa_productname_producttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Product Name here.."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/vT_oa_manufacturername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Manufacture Name here.."
                        android:textColor="@color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/vI_qr_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_weight="0.1"
                    android:src="@raw/arrow_white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:id="@+id/vL_ao_selectwarehouse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="170dp"
                    android:text="@string/selectwarehouse"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/vI_ao_selectware"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:src="@raw/add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vL_ao_warehouselist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warehouse&apos;s"
                        android:textColor="@color/red_textcolor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="@string/qty"
                        android:textColor="@color/red_textcolor" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".5"
                    android:background="@color/grey_light" />

                <ListView
                    android:id="@+id/vL_ao_warehouselistview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" >
                </ListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".5"
                    android:background="@color/grey_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="200dp"
                        android:text="@string/total_quant"
                        android:textColor="@color/red_textcolor" />

                    <TextView
                        android:id="@+id/vT_ao_totalquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/red_textcolor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/pieces"
                        android:textColor="@color/red_textcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="15dp"
                android:gravity="bottom" >

                <ImageView
                    android:id="@+id/vI_ao_block"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:src="@raw/block" />

                <ImageView
                    android:id="@+id/vI_ao_fulfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:src="@raw/fulfill" />

                <ImageView
                    android:id="@+id/vI_ao_cancel"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@raw/cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>