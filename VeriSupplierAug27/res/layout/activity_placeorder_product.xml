<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_gray_square"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="@string/thanks_text"
                android:textColor="@color/red_wishlist"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vT_apop_ordernumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Order Number"
                android:textStyle="bold"
                android:textColor="@color/text_new"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/vT_apop_orderinfo_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/orderinfo"
            android:textColor="@color/detailpage_textcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/vT_apop_orderdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Order Date"
            android:textColor="@color/text_new"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_background_gray_square"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/vI_apop_productImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@raw/user_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vT_apop_productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_apop_unitpricetext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/unitprice" />

                <TextView
                    android:id="@+id/vT_apop_unitprice_divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:gravity="center|start"
                    android:text=" : " />

                <TextView
                    android:id="@+id/vT_apop_unitPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_apop_quantitytext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/quantity" />

                <TextView
                    android:id="@+id/vT_apop_quantity_divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:gravity="center|start"
                    android:text=" : " />

                <TextView
                    android:id="@+id/vT_apop_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_apop_subtotaltext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/subtotal" />

                <TextView
                    android:id="@+id/vT_apop_subtotal_divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:gravity="center|start"
                    android:text=" : " />

                <TextView
                    android:id="@+id/vT_apop_subtotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Manufacturer Details"
            android:textColor="@color/detailpage_textcolor"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_gray_square"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/vI_apop_manufacturerImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center|start"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/app_name"
                android:src="@raw/user_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vT_apop_manufacturerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vT_apop_manufacturerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vT_apop_manufacturerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Billing address"
            android:textColor="@color/detailpage_textcolor"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_gray_square"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/vT_apop_customerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/detailpage_textcolor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vT_apop_customerAddress1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/detailpage_textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vT_apop_customerAddress2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/detailpage_textcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/vT_apop_customerphonenubmer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/detailpage_textcolor"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_apop_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/red_wishlist"
                android:gravity="center"
                android:text="suggestion"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>