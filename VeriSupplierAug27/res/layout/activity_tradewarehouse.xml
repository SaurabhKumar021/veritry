<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vL_atwh_searchlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/new_green" >

        <TextView
            android:id="@+id/vT_mp_searchproduct_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:text="Search Products"
            android:textColor="@color/white" />

        <SearchView
            android:id="@+id/product_searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center" >
        </SearchView>
    </LinearLayout>

    <ListView
        android:id="@+id/vL_atwh_warehouseList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"
        tools:listitem="@layout/trade_warehouseview" >
    </ListView>

    <LinearLayout
        android:id="@+id/vL_atwh_addwarehouse"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@raw/order_circle_status"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@raw/add"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>