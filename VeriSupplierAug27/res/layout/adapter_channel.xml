<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        style="@style/MyListBackContent"
        android:baselineAligned="false"
        android:gravity="right"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/vL_ad_sml_distributer"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="37.85"
            android:background="#696969"
            android:alpha=".7"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:drawablePadding="2dp"
                android:gravity="left|center_vertical"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_ad_options"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="4.14"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vI_ad_call"
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"
                android:src="@raw/icon1" />
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
             <ImageView
                android:id="@+id/vI_ad_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@raw/icon_2" />
              <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
              <ImageView
                android:id="@+id/vI_ad_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@raw/icon3" />
               <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
               <ImageView
                android:id="@+id/vI_ad_fav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@raw/icon4" />
              
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front"
        style="@style/MyListFrontContent"
        android:layout_width="fill_parent"
        android:background="#ffffff"
      
        android:gravity="left"
        android:tag="front" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/channel_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_launcher"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.4"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vT_channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/channel_name"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/vT_ad_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/onlineshopping"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                     />
            </LinearLayout>
             <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="top"
                android:background="@raw/icon_7"
                 />

            <ImageView
                style="@style/MyListImage"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>