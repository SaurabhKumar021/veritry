<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/vI_aol_productimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vT_aol_orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/vT_aol_orderno_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order On"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/vT_aol_orderdon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="04/05/2015"
                        android:textSize="12sp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/vT_aol_productnanme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name" />

            <TextView
                android:id="@+id/vT_aol_manufacturename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacture Name" />

            <TextView
                android:id="@+id/vT_aol_milestone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milestone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/vT_oa_level_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level-1"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level-2"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level-3"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level-4"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/vT_aol_milestonelevel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/vT_aol_milestone1"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.7"
                    android:src="@drawable/small_circle" />

                <ImageView
                    android:id="@+id/vT_aol_milestone2"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/small_circle" />

                <ImageView
                    android:id="@+id/vT_aol_milestone3"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.8"
                    android:src="@drawable/small_circle" />

                <ImageView
                    android:id="@+id/vT_aol_milestone4"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/small_circle" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>