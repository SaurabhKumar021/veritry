<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vT_acqbc_dateTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:padding="3dp"
        android:textColor="@color/red_textcolor"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/vL_acqbc_rootLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/chat_red"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_acqbc_subject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_new"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_acqbc_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_new"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vL_acqbc_additionalinfo_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_acqbc_addresstext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/red_wishlist"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_acqbc_manufacturerComapnyName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vT_acqbc_manufacturerAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_acqbc_categoryview"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/vL_acqbc_category_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_acqbc_category_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/category"
                    android:textColor="@color/red_wishlist"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/VT_acqbc_category"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/vL_acqbc_subcategory_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_acqbc_subcategory_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/subcategory"
                    android:textColor="@color/red_wishlist"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/VT_acqbc_subcategory"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/vL_acqbc_quontity_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_acqbc_quantity_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/quantity"
                    android:textColor="@color/red_wishlist"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/VT_acqbc_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_new"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/VT_acqbc_quantity_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_new"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_acqbc_quantityview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vL_acqbc_bestprice_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_acqbc_bestprice_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/best_price"
                android:textColor="@color/text_new"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/VT_acqbc_bestprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/VT_acqbc_bestprice_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_acqbc_attachmentview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vL_acqbc_attachment_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_acqbc_attachment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attachment"
                android:textColor="@color/red_wishlist"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="visible" >

                <com.mmadapps.verisupplier.customs.TwoWayView
                    android:id="@+id/vL_acqbc_documentlist"
                    style="@style/TwoWayView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/text_color_gray"
                    android:dividerHeight="1dp"
                    android:drawSelectorOnTop="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_acqbc_buyer_responcelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vT_acqbc_acceptButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/accept"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vT_acqbc_rejectButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/reject"
                android:textAllCaps="true"
                android:textColor="@color/red_textcolor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>