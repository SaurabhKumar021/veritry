<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/vT_AD_qtnLable"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="left|center"
            android:text="Quotation: "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vT_AD_qtnValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Subject Message Here"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vT_AD_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:text="12/04/2015"
            android:textColor="@color/grey"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/vT_AD_productNameLable"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="top"
            android:text="Product Name: "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vT_AD_productNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="Selected Products Name"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/vT_AD_mfrNameLable"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="top"
            android:text="Manufacturer Name: "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vT_AD_mfrNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="Manufacturer Name"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/vT_AD_quotationstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Manufacturer Name"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>