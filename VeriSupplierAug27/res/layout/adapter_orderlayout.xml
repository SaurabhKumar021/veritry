<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/orderrowing_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/vI_of_company_logo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight=".3"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/dashboard_order_productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name Description text here...."
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dashboard_order_manufacturename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manufacture Company Pvt.Ltd."
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/border_line"
                android:orientation="horizontal"
                android:padding="2dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unit Price: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dashboard_order_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="US"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$59"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dashboard_order_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dashboard_pieces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Piece/Pieces"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Total Product Price:"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="US"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$590"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>