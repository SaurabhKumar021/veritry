<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" >

        <ImageView
            android:id="@+id/vI_oa_productimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.71"
            android:orientation="vertical" >
 				
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
               
                <TextView
                android:id="@+id/vT_oa_channelnanme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel_name" />
                

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right|center"
			    android:orientation="vertical" >

            <TextView
                android:id="@+id/vT_oa_status"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="Accept" />
            </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/vT_oa_productnanme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_textcolor"
                android:text="Product name here..." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Qty : " />
                
                <TextView
                    android:id="@+id/vT_oa_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="1000" />
                <View
                     android:layout_width="10dp"
                     android:layout_height="match_parent"/>
                
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Order# : " />
                
                
                <TextView
                    android:id="@+id/vT_oa_orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textSize="10sp"
                    android:text="0011223344" />
                  <LinearLayout
				   	 android:layout_width="match_parent"
				   	 android:layout_height="wrap_content"			    
				     android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/vT_oa_date"
                    android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:layout_marginRight="5dp"
                      android:layout_gravity="right|center"
                    android:layout_height="wrap_content"
                    android:text="11/11/11" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>