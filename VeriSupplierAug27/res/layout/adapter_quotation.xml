<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        style="@style/MyListBackContent"
        android:baselineAligned="false"
        android:gravity="end|center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:tag="back" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha=".5" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF5A5F"
            android:gravity="center"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/vI_AQ_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@raw/icon_phone_w" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#FFF1F2" />

            <ImageView
                android:id="@+id/vI_AQ_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@raw/icon_message_w" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#FFF1F2" />

            <ImageView
                android:id="@+id/vI_AQ_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@raw/icon_chat_w" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#FFF1F2" />

            <ImageView
                android:id="@+id/vI_AQ_flag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@raw/icon_flag_w" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/front"
        style="@style/MyListFrontContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:tag="front" >

        <com.mmadapps.verisupplier.customs.CircularImageView
            android:id="@+id/vI_AQ_buyerImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView 
                    android:id="@+id/vT_aq_quotationnumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_new"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:gravity="start|center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vT_AQ_Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/text_new"
                    android:gravity="start|center"
                    android:text="Location Name" />

                <ImageView
                    android:id="@+id/vI_AQ_flagImage"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@raw/icon_flag_fill" />
            </LinearLayout>

            <TextView
                android:id="@+id/vT_AQ_manufacturerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="Manufacturer co pvt ltd"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/vT_AQ_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="Selected product name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red_textcolor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vT_AQ_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10:15 AM"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vT_AQ_status"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Accept"
                        android:gravity="right"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>