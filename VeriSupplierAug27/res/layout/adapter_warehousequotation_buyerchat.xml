<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vT_awhqbc_dateTimeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="end"
        android:padding="3dp"
        android:textColor="@color/red_textcolor"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/vL_awhqbc_rootLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/chat_red"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_awhqbc_subject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_new"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_awhqbc_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:textColor="@color/text_new"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vT_awhqbc_arearequirement_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/area_Requirment"
                android:textColor="@color/red_textcolor"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/vT_awhqbc_size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/vT_awhqbc_size_measurement"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/length"
                    android:textColor="@color/text_new"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_awhqbc_arearequirement_view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:id="@+id/vT_awhqbc_location_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/location"
                    android:textColor="@color/red_textcolor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vT_awhqbc_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_awhqbc_locationview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vL_awhqbc_bestprice_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_awhqbc_bestprice_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/best_price"
                android:textColor="@color/text_new"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/VT_awhqbc_bestprice_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/VT_awhqbc_bestprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
                
                <TextView
                    android:id="@+id/VT_awhqbc_bestprice_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_new"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_awhqbc_attachmentview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey_light" />

        <LinearLayout
            android:id="@+id/vL_awhqbc_attachmentlist_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/vT_awhqbc_attachmentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attachment"
                android:textColor="@color/red_textcolor"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="visible" >

                <com.mmadapps.verisupplier.customs.TwoWayView
                    android:id="@+id/vL_awhqbc_documentlist"
                    style="@style/TwoWayView"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/text_color_gray"
                    android:dividerHeight="1dp"
                    android:drawSelectorOnTop="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_awhqbc_buyer_responcelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vT_awhqbc_acceptButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/accept"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/vT_awhqbc_rejectButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_red"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/reject"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="@color/red_textcolor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>